<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="STANMOREAPP.MainPage"
             BackgroundImageSource="intro">

    <StackLayout>
        <Frame BackgroundColor="#ffff" >
            <Image Source="logo"></Image>
        </Frame>

        <Button Text="Login" TextTransform="None" FontFamily="Segoe UI" BackgroundColor="#ffff" TextColor="#717171" HorizontalOptions="Center" WidthRequest="250" FontSize="20" Margin="0, 370, 0, 35"  Clicked="ToLogin_Clicked">
        </Button>
        <Button Text="Register" TextTransform="None" FontFamily="Segoe UI" BackgroundColor="#ffff" TextColor="#717171" HorizontalOptions="Center" WidthRequest="250" FontSize="20"  Clicked="ToRegister_Clicked"/>

    </StackLayout>

</ContentPage>
