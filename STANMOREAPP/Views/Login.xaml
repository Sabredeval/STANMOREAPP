<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="STANMOREAPP.Views.Login"
             BackgroundImageSource="intro">

        <StackLayout>
            <Frame BackgroundColor="#ffff" >
                <Image Source="logo"></Image>
            </Frame>

            <Entry Placeholder="Username..." PlaceholderColor="#717171" BackgroundColor="White" WidthRequest="250" HorizontalOptions="Center" Margin="0,200,0,0" ></Entry>
            <Entry Placeholder="Password..." PlaceholderColor="#717171" BackgroundColor="White" WidthRequest="250" HorizontalOptions="Center" Margin="0,20,0,200"></Entry>

        <Button Text="Submit" TextTransform="None" FontFamily="Segoe UI" BackgroundColor="#ffff" TextColor="#717171" HorizontalOptions="Center" WidthRequest="250" FontSize="20" Margin="0, 0, 0, 35"  Clicked="ToMenu_Clicked"/>

            <Button Text="Back" TextTransform="None" FontFamily="Segoe UI" BackgroundColor="#ffff" TextColor="#717171" HorizontalOptions="Center" WidthRequest="250" FontSize="20" Clicked="ToMain_Clicked"/>

        </StackLayout>
    
</ContentPage>