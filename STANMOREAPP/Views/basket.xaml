<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="STANMOREAPP.Views.basket"
             BackgroundColor="AliceBlue">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#ffff" >
                <Image Source="logo"></Image>
            </Frame>
            <StackLayout BackgroundColor="#ffffff" VerticalOptions="CenterAndExpand" HorizontalOptions="Center" HeightRequest="500" WidthRequest="500">
                <Label Text="{Binding }" />
                <Label />
                <Button Text="Clear the Basket" TextTransform="None" FontSize="28" VerticalOptions="EndAndExpand" HeightRequest="60" BackgroundColor="#E70000"/>
            </StackLayout>
            <Frame BackgroundColor="#ffff" HeightRequest="80" HorizontalOptions="Fill" VerticalOptions="EndAndExpand">
                <Button Text="Home" FontFamily="Segui UI" FontSize="20" TextColor="Black" BackgroundColor="#ffff" HorizontalOptions="Fill" Clicked="ToMenu_Clicked"></Button>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>